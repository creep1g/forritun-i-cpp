#include <iostream>
using namespace std;

void write_text(){
  cout << "Let's do arrays!" << endl;
}

int main(){
  write_text();

  int array_of_ints[8] = {0,0,0,0,0,0,0,0};

  int my_int = 34;

  cout << "How big is any integer: " << sizeof(int) << endl;
  cout << "How big is my integer: " << sizeof(my_int) << endl;
  cout << "How big is my integer array: " << sizeof(array_of_ints) << endl;

  cout << "Here are the values: " << endl;

/*   for(int i = 0; i < 8; i++){ */
/*     array_of_ints[i] = 0; */ 
/*   } */

  for(int i = 0; i < 8; i++){
    cout << "Value number " << i << " is " << array_of_ints[i] << endl;
  }


}
